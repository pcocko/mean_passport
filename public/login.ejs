<div class="container">

<div class="col-sm-4 col-sm-offset-4">

	<h1><span class="fa fa-user"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>
	
	<!-- LOGIN FORM -->
	<form action="/partials/login" method="post">
		<div class="form-group">
			<label>Usuario</label>
			<input type="text" class="form-control" name="usuario">
		</div>
		<div class="form-group">
			<label>Contraseña</label>
			<input type="password" class="form-control" name="password">
		</div>

		<button type="submit" class="btn btn-warning btn-lg">Entrar</button>
	</form>

	<hr>

	<p>No tengo una cuenta, <a href="#signup">Registrarme</a><br/>
	No recuerdo la contraseña, <a href="/">Recuperarla</a>.</p>

</div>

</div>